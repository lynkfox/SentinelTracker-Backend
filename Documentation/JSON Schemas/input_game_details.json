        },
        "advanced": {
            "type": "boolean"
        },
        "challenge": {
            "type": "boolean"
        },
        "comment": {
            "type": "string"
        }
    },
    "required": [
        "username",
        "entered_on",
        "hero_team",
        "environment",
        "villain"
    ],
    "definitions": {
        "User": {
            "title": "User",
            "description": "Model of a row in the Users Table.",
            "type": "object",
            "properties": {
                "username": {
                    "type": "string"
                }
            },
            "required": [
                "username"
            ]
        },
        "GameMode": {
            "title": "GameMode",
            "description": "An enumeration.",
            "enum": [
                "Normal",
                "Team Villains",
                "OblivAeon",
                "Definitive",
                "Mixed"
            ]
        },
        "SelectionMethod": {
            "title": "SelectionMethod",
            "description": "An enumeration.",
            "enum": [
                "Unspecified",
                "Random",
                "Player Choice",
                "Rematch/Replay",
                "Event",
                "Thematic",
                "Specific Attempt"
            ]
        },
        "Platform": {
            "title": "Platform",
            "description": "An enumeration.",
            "enum": [
                "Physical",
                "Table Top Simulator",
                "Steam",
                "Apple",
                "Android",
                "Other",
                "Mobile (Unknown Brand)",
                "Playtesting"
            ]
        },
        "HeroLossCondition": {
            "title": "HeroLossCondition",
            "description": "An enumeration.",
            "enum": [
                "Heroes Defeated by the Villains",
                "Consumed! (Gloomweaver, Skinwalker)",
                "Fell to her Dreams (The Dreamer)",
                "Earth, Overrun! (Grand Warlord Voss)",
                "Lives on through it's devices (Omnitron)",
                "Engines Failed! (Mobile Defense Platform)",
                "3, 2, 1, ZERO! (Mars Wagner Base)",

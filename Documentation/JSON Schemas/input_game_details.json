        "username": {
            "anyOf": [
                {
                    "$ref": "#/definitions/User"
                },
                {
                    "type": "string"
                }
            ]
        },
        "entered_on": {
            "type": "string",
            "format": "date-time"
        },
        "game_mode": {
            "$ref": "#/definitions/GameMode"
        },
        "selection_method": {
            "$ref": "#/definitions/SelectionMethod"
        },
        "platform": {
            "$ref": "#/definitions/Platform"
        },
        "end_result": {
            "anyOf": [
                {
                    "$ref": "#/definitions/HeroLossCondition"
                },
                {

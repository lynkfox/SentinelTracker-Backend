        },
        "hero_team": {
            "anyOf": [
                {
                    "$ref": "#/definitions/HeroTeam"
                },
                {
                    "type": "integer"
                }
            ]
        },
        "environment": {
            "type": "string"
        },
        "villain": {
            "anyOf": [
                {
                    "$ref": "#/definitions/VillainOpponent"
